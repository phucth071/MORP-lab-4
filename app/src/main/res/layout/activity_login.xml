<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_background"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_weight="1"
        android:background="@drawable/top_background1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="Welcome Back"
            android:textColor="@color/orange"
            android:textSize="36dp"
            android:textStyle="bold"
            android:id="@+id/tv_welcome"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/email"
            android:hint="Email"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/password"
            android:hint="Password"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"/>

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_arraw1"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/social_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="10dp">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeColor="@color/text_blue"
                    app:strokeWidth="2dp"
                    android:padding="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableRight="@drawable/facebook"
                    android:drawablePadding="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_blue"
                    android:text="Facebook"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:strokeColor="@color/text_blue"
                    app:strokeWidth="2dp"
                    android:padding="10dp"
                    android:backgroundTint="@android:color/transparent"
                    android:drawableRight="@drawable/google"
                    android:drawablePadding="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_blue"
                    android:text="Google"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you new user? Register"
            android:textColor="@color/text_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/tv_register"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>